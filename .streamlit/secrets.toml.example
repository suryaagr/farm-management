# Streamlit Cloud Secrets Configuration Example
# Copy this file to your Streamlit Cloud app's secrets section
# DO NOT commit the actual secrets.toml file with real credentials

[connections.postgresql]
url = "postgresql://username:password@hostname:port/database_name"

# Alternative format (individual fields):
# [connections.postgresql]
# dialect = "postgresql"
# host = "your-database-host.com"
# port = "5432"
# database = "your_database_name"
# username = "your_username"
# password = "your_password"

# Example for Neon (serverless PostgreSQL):
# url = "postgresql://user:password@ep-xyz.us-east-2.aws.neon.tech/neondb?sslmode=require"

# Note: In your code, access these secrets using:
# import streamlit as st
# DATABASE_URL = st.secrets["connections"]["postgresql"]["url"]
